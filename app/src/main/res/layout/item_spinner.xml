<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/spinner">

    <ImageView

        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/vacio"
        android:contentDescription="@string/alt_imagen"
       /><!-- android:layout_weight="0.1"   android:layout_weight="2"-->

    <com.farfly.MiTextView
        android:gravity="center_vertical"
        android:id="@+id/textview_spinner_custom"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        style="@style/estilo_texto" />
</LinearLayout>
