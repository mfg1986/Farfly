<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

      <!--  <item name="android:panelFullBackground">@drawable/nubes_mapas</item>-->


    </style>
    <!--Estilo para el RatingBar-->
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    <!--Estilo para el RatingBar pequeÃ±o-->
    <style name="RatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_small_full</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <!--Estilo para los botones-->
    <style name="button" parent="@android:style/Widget.Button">
        <item name="com.farfly:font">fonts/Animated.ttf</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/azul5</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:background">@drawable/btn_estados</item>
    </style>

<!--Estilo botones de aviso-->
    <style name="button_aviso" parent="@android:style/Widget.Button">
        <item name="com.farfly:font">fonts/Animated.ttf</item>
        <item name="android:textSize">20sp</item>
       <!-- <item name="android:shadowColor">@color/azul5</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>-->
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@drawable/btn_dialog_estados</item>
    </style>
<!--Estilo botones que conforman las opciones del menu de opciones-->
    <style name="button_menu" parent="@android:style/Widget.Button">
        <item name="com.farfly:font">fonts/Animated.ttf</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:background">@drawable/btn_menu_estados</item>
       <!-- <item name="android:background">@drawable/btn_dialog_estados</item>-->
    </style>

<!--Estilo Titulos de cabecera-->
    <style name="estilo_titulo">
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/azul</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

<!--Estilo de los textos-->
    <style name="estilo_texto">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gris</item>
    </style>

<!--Estilo de los titulos de los textos en ListActivity-->
    <style name="estilo_titulo_texto">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/azul2</item>
    </style>
<!--Estilo titulo de los textos en Editar y Mostrar Activity-->
    <style name="estilo_titulo_small">
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/azul</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
        <item name="android:textColor">@color/blanco</item>
    </style>
    <!--Estilo titulos dentro del menu de opciones-->
    <style name="estilo_titulo_opciones">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/azul</item>
    </style>
</resources>
